    function onKeyDown(event) {
            <!-- //var maxPoint=new Point(1899,1000); -->

            if(keyData[event.key]){
                var maxPoint=new Point(view.size.width,view.size.height);
                var randomPoint = Point.random();
                var center = randomPoint*maxPoint;
                var myCircle = new Path.Circle(center,400);
                var randomPoint2 = Point.random();
                myCircle.fillColor=new Color(randomPoint.x,randomPoint.y,randomPoint2.x);
                 keyData[event.key].sound.play();
                circles.push(myCircle);
            }
    }

    function onFrame(event) {
        for(var i=0;i<circles.length;i++){
            circles[i].fillColor.hue += 1;
            circles[i].scale(.92);
            if(circles[i].area < 1){
                circles[i].remove();
                circles.splice(i, 1);
                i--;
            }
        }
    }
